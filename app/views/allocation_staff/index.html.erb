<%= link_to "Back", 'javascript:history.back()', class: "govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-6" %>

<% if @prisoner.needs_a_com? %>
  <%= render partial: 'shared/notifications/offender_needs_a_com', locals: {offender: @prisoner, email_history: @emails_sent_to_ldu} %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="moj-page-header-actions">
      <div class="moj-page-header-actions__title">
        <h1 class="govuk-heading-l">
          <% if @current_pom %>
            <% content_for :title, "Reallocate a POM – Digital Prison Services" %>
            Reallocate a POM
          <% else %>
            <% content_for :title, "Allocate a POM – Digital Prison Services" %>
            Allocate a POM to <%= @prisoner.first_name.capitalize %> <%= @prisoner.last_name.capitalize %>
          <% end %>
        </h1>
        <span class="govuk-caption-l">Prison number: <%= @prisoner.offender_no %></span>
        <span class="govuk-caption-l">Date of birth: <%= format_date(@prisoner.date_of_birth) %> (<%= @prisoner.age %>)</span>
      </div>
    </div>
  </div>
</div>

<h2 class="govuk-heading-m govuk-!-margin-top-5">
  <%= recommended_pom_type_label(@prisoner) %> POM recommended
</h2>

<% if @previous_poms.any? %>
  <div class="govuk-warning-text">
    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
    <p class="govuk-warning-text__text">
    <span class="govuk-warning-text__assistive">Warning</span>
    The following POMs have been allocated to this case most recently:
    <div class="govuk-!-margin-left-5">
      <ul class="govuk-list govuk-list--bullet">
        <% @previous_poms.each do |pom| %>
          <li><%= pom.first_name.capitalize %> <%= pom.last_name.capitalize %> - 09 Apr 2020 to 03 Mar 2021</li>
        <% end %>
      </ul>

      <p class="govuk-body">
        <%= link_to 'View allocation history', history_prison_prisoner_allocation_path(@prison.code, @prisoner.offender_no) %> for more information.
      </p>
    </div>
  </div>
<% end %>

<h2 class="govuk-heading-m govuk-!-margin-top-8">
  Choose a POM
</h2>

<p>You can choose an available prison POM below or allocate to a probation POM,<br>
for example if a particular POM has worked with <%= @prisoner.first_name.capitalize %> before.</p>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr>
      <th class="govuk-table__header" scope="col" aria-sort="none" style="width: 200px;"><button type="button" data-index="0">POM</button></th>
      <th class="govuk-table__header" scope="col" aria-sort="none" style="width: 200px;"><button type="button" data-index="1">POM type</button></th>
      <th class="govuk-table__header" scope="col" aria-sort="none" style="width: 140px;"><button type="button" data-index="2">Working pattern</button></th>
      <th class="govuk-table__header govuk-table__header--numeric" scope="col" aria-sort="none"><button type="button" data-index="3">Allocations in  last 7 days</button></th>
      <th class="govuk-table__header govuk-table__header--numeric" scope="col" aria-sort="none"><button type="button" data-index="4">Supporting cases</button></th>
      <th class="govuk-table__header govuk-table__header--numeric" scope="col" aria-sort="none"><button type="button" data-index="5">Responsible cases</button></th>
      <th class="govuk-table__header govuk-table__header--numeric" scope="col" aria-sort="none"><button type="button" data-index="6">Co-working cases</button></th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric" aria-sort="none"><button type="button" data-index="7">Total cases</button></th>
      <th class="govuk-table__header" scope="col" style="width: 80px; padding-left: 20px;">Action</th>
      <th class="govuk-table__header">Select POMs <br>to compare workloads</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">

    <% (@probation_poms.select(&:active?) + @prison_poms.select(&:active?)).each do |pom| %>
      <tr class="govuk-table__row recommended_pom_row_1">
        <td aria-label="POM name" class="govuk-table__cell pom_name">
          <%= pom.first_name %> <%= pom.last_name %>
          <% if @previous_poms.map(&:staff_id).include? pom.staff_id %>
            <br>
            <span class="govuk-!-font-weight-bold">Previously allocated</span>
          <% end %>
        </td>

        <td aria-label="POM role" class="govuk-table__cell">
          <% if @prisoner.recommended_pom_type == pom.position %>
            <div class="highlight-cell">
              <span class="govuk-!-font-weight-bold"><%= pom.probation_officer? ? 'Probation' : 'Prison' %> POM</span>
              <span class="govuk-body-s">recommended</span>
            </div>
          <% else %>
            <%= pom.probation_officer? ? 'Probation' : 'Prison' %> POM
          <% end %>
        </td>

        <td aria-label="Working pattern" class="govuk-table__cell"><%= format_working_pattern(pom.working_pattern) %></td>
        <td aria-label="case mix" class="govuk-table__cell govuk-table__cell--numeric">5</td>
        <td aria-label="recent allocations" class="govuk-table__cell govuk-table__cell--numeric">6</td>
        <td aria-label="Total prison" class="govuk-table__cell govuk-table__cell--numeric">10</td>
        <td aria-label="recent allocations" class="govuk-table__cell govuk-table__cell--numeric">19</td>
        <td aria-label="recent allocations" class="govuk-table__cell govuk-table__cell--numeric govuk-!-font-weight-bold"><%= pom.allocations.count %></td>

        <td aria-label="recent allocations" class="govuk-table__cell" style="width: 80px; padding-left: 20px;">
          <%= link_to 'Allocate', new_prison_prisoner_staff_build_allocation_path(@prison.code, @prisoner.offender_no, pom.staff_id) %>
        </td>

        <td aria-label="select" class="govuk-table__cell">
          <div class="govuk-checkboxes govuk-checkboxes--small" data-module="govuk-checkboxes" style="margin-left: 20px; margin-top: -8px;">
            <div class="govuk-checkboxes__item">
              <input class="govuk-checkboxes__input" id="organisation" name="organisation" type="checkbox" value="hmrc">
              <label class="govuk-label govuk-checkboxes__label" for="organisation">
              </label>
            </div>
          </div>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<div style="overflow: hidden">
  <button class="govuk-button govuk-button--secondary" data-module="govuk-button" style="float: right">
    Compare workloads
  </button>
</div>

<div class="govuk-accordion" data-module="govuk-accordion">
  <% accordion_body = capture do %>
    <table class="govuk-table">
      <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header">POM</th>
        <th class="govuk-table__header">POM status</th>
        <th class="govuk-table__header">POM type</th>
        <th class="govuk-table__header">Total cases</th>
      </tr>
      </thead>
      <tbody class="govuk-table__body">
      <% (@prison_poms + @probation_poms).reject(&:active?).each do |pom| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell"><%= pom.first_name %> <%= pom.last_name %></td>
          <td class="govuk-table__cell"><%= status(pom) %></td>
          <td class="govuk-table__cell"><%= grade(pom) %></td>
          <td class="govuk-table__cell"><%= pom.allocations.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
  <%= render 'shared/accordion_section',
             id: 'accordion',
             title: "Unavailble POMs",
             body: '',
             content: accordion_body %>
</div>


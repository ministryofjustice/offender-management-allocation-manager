<div class="govuk-summary-card">
  <div class="govuk-summary-card__title-wrapper">
    <h2 class="govuk-summary-card__title">Current responsibility & handover information</h2>
    <ul class="govuk-summary-card__actions">
      <li class="govuk-summary-card__action">
        <strong class="govuk-tag govuk-tag--yellow">
          Overridden
        </strong>
      </li>
    </ul>
  </div>
  <div class="govuk-summary-card__content">
    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Responsibility</dt>
        <dd class="govuk-summary-list__value"><%= override.value %></dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Note</dt>
        <dd class="govuk-summary-list__value">Overridden by user at <%= override.updated_at.strftime('%d/%m/%Y %H:%M:%S') %></dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Reason</dt>
        <dd class="govuk-summary-list__value">
          <%= override.other_reason? ? simple_format(override.reason_text) : override.reason.humanize %>
        </dd>
      </div>
    </dl>
  </div>
</div>

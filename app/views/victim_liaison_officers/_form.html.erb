<%= form_for(vlo,
             url: form_url,
             method: form_action,
             builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_text_field :first_name, label: { text: 'First name' }, width: 20 %>
  <%= f.govuk_text_field :last_name, label: { text: 'Last name' }, width: 20 %>
  <!-- govuk_email_field seems to have strange popup behaviour - so use plain text field instead-->
  <%= f.govuk_text_field :email, label: { text: 'Email address' }, width: 20 %>

  <%= f.submit "Save details", role: "button", draggable: "false", class: "govuk-button" %>
  <%= link_to 'Cancel', 'javascript:history.back()', class: 'govuk-link cancel-button' %>
<% end %>
<%= form_for(@early_allocation,
             as: :early_allocation,
             url: oasys_date_prison_prisoner_early_allocations_path(@prison.code, @early_allocation.nomis_offender_id),
             method: form_method,
             builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>
  <%= f.govuk_error_summary %>

  <h1 class="govuk-heading-l govuk-!-margin-top-4">When did this prisoner last have an OASys assessment?</h1>

  <p class="govuk-body">
    This must have been in the last 3 months to continue the assessment.
  </p>

  <%= f.govuk_date_field(:oasys_risk_assessment_date,
                         legend: {
                             size: 's',
                             text: ''
                         }) %>

  <%= f.submit "Continue", role: "button", draggable: "false", class: "govuk-button" %>
<% end %>
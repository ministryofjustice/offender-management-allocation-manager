<div class="govuk-grid-row pagination">
  <div class="govuk-grid-column-one-half">
    <% if data.current_page < 3 %>
      <%= paginate data, window: 5 - data.current_page, params: defined?(url_params) ? url_params : {} %>&nbsp;
    <% else %>
      <%= paginate data, window: 2, params: defined?(url_params) ? url_params : {} %>&nbsp;
    <% end %>
  </div>
  <div class="govuk-grid-column-one-half result-count">
    <%= page_entries_info data %>
  </div>
</div>


<% if deallocate_secondary_pom.event_trigger == 'offender_transferred' %>
  <%= render 'case_history/case_history',
             title: 'Co-working unallocated',
             description: 'Prisoner transferred',
             object: deallocate_secondary_pom
  %>
<% else %>
  <% description = capture do %>
    Prisoner unallocated co-working POM
    <%= deallocate_secondary_pom.previous_secondary_pom_name.titleize %> - <%= format_email(deallocate_secondary_pom.previous_secondary_pom_email) %>
  <% end %>
  <%= render 'case_history/case_history',
             title: 'Co-working unallocated',
             description: description,
             object: deallocate_secondary_pom %>
<% end %>
